<h1>Login</h1>

<form action="/login" method="POST">
<div>
    <label for="name">User Name</label>  
    <input type="text" id="name" name="name"/>
</div>
<div>
    <label for="pwd">Password</label>  
    <input type="text" id="pwd" name="pwd"/>
</div>
<div>
    <input type="submit" value="Login"/>
</div>
</form>